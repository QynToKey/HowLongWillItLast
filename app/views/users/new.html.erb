<h1>新規登録</h1>

<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :name %><small>（ニックネーム可）</small><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>
